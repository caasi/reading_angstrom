    "version": "0.2.0",
    "configurations": [
        {
            "name": "OCaml Debug",
            "type": "ocamlearlybird",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/_build/default/src/hello.bc",
            "stopOnEntry": true,
            "yieldSteps": 1024,
            "onlyDebugGlob": "<${workspaceFolder}/**/*>",
            "cwd": "${workspaceFolder}"
        }
    ]
}